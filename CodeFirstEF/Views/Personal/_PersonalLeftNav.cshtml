<script type="text/javascript">
    $(function() {

        var currentMenuItem = '@ViewBag.MenuItem';
        $('.nav-title').click(function() {
            var $navitem = $(this).children('p');
            if (!$navitem.children('a')[0]) {
                var menuClass = 'menu-' + $navitem.attr('class').replace('nav-', '');
                $('.nav-body').find('ul:not(".' + menuClass + '")').hide();
                $('.' + menuClass).show();
                $('.nav-current').removeClass('nav-current');
                $('.' + menuClass).prev('div').addClass('nav-current');

            }
        })
        if ($('.nav-' + currentMenuItem)[0]) {
            $('.nav-' + currentMenuItem).parent().addClass('nav-current');
        } else {

            $('.item-' + currentMenuItem).addClass('current').parents('ul').show();
            $('.item-' + currentMenuItem).parents('ul').prev('div').addClass('nav-current');
        }
    })

</script>
