@using CodeFirstEF.ViewModels


@model IEnumerable<CompanyVerifyViewModel>

@{
    ViewBag.Title = "企业信息审核列表";
}


@(Html.Kendo().Grid(Model)
    .Name("CompanyVerify")
    .Columns(columns =>
    {
        columns.Bound(p => p.CompanyID).Groupable(false);
        columns.Bound(p => p.Name);
        columns.Bound(p => p.Description);
        columns.Bound(p => p.LinkMan);
        columns.ForeignKey(p => p.Status, new SelectList((List<SelectListItem>)ViewBag.CompanyStatus, "value", "text"));
        columns.Bound(p => p.AddTime).Format("{0:yyyy-MM-dd}");
        columns.Bound(p => p.LastTime).Format("{0:yyyy-MM-dd}");
        columns.Command(command => command.Custom("查看详情").Click("CompanyVerify.showDetails"));

    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("Company_Read", "CompanyVerify"))
    ).HtmlAttributes(new { style = "height:500px" })
)

@(Html.Kendo().Window().Name("CompanyDetails")
    .Title("企业详情")
    .Visible(false)
    .Modal(true)
    .Draggable(true)
    .Width(700)
    .Height(500)
    .Scrollable(true)
    .Content(@<text>
<div id="verifyLoading">
    <img src="~/Content/images/formloading.gif" alt="loading" border="0" />
</div>
<iframe id="verifyContent" name="verifycontent" width="100%" height="100%" style="display: none;" marginwidth="0" marginheight="0" frameborder="0" src=""></iframe>
</text>)
)

<script type="text/javascript">
    var CompanyVerify = {
        showDetails: function(e) {
            e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            var url = '@Url.Action("Details", "CompanyVerify")';
            $('#verifyContent').attr('src', url + '/' + dataItem.CompanyID);
            var wnd = $("#CompanyDetails").data("kendoWindow").center().open();
        }
    };
    $(function() {
        $('#verifyContent').load(function() {
            $('#verifyLoading').hide();
            $(this).show();
        })
    })
</script>
